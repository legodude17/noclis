{
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/node21/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "verbatimModuleSyntax": true
  }
}
